<script>
const playBtn = document.getElementById("playToggle");
let playing = false;
playBtn.addEventListener("click", () => {
  const musics = [
    document.getElementById("music1"),
    document.getElementById("music2"),
    document.getElementById("music3")
  ];
  if(!playing){
    musics.forEach(m => m.play());
    playBtn.textContent="🔇 Pausar música";
  } else {
    musics.forEach(m => m.pause());
    playBtn.textContent="🔊 Ligar música";
  }
  playing = !playing;
});
</script>

<!-- ====== Stars neon JS ====== -->
<script>
const starCount = 100;
for(let i=0;i<starCount;i++){
  const star = document.createElement('div');
  star.className = 'star';
  const size = Math.random()*2+1; 
  star.style.width = star.style.height = size + 'px';
  star.style.left = Math.random()*100 + 'vw';
  star.style.top = '100%';
  star.style.animationDuration = (Math.random()*6 + 4) + 's';
  star.style.animationDelay = (Math.random()*-10) + 's';
  document.body.appendChild(star);
}
</script>

<!-- ====== Controle de álbuns clicáveis ====== -->
<script>
const players = document.querySelectorAll(".player");
let currentMusic = null;

players.forEach(player => {
  const album = player.querySelector(".album");
  const title = player.querySelector("h4");
  const audio = player.querySelector("audio");

  // Função para tocar/pausar
  const toggleMusic = () => {
    if (currentMusic && currentMusic !== audio) {
      currentMusic.pause();
      currentMusic.currentTime = 0;
    }
    if (audio.paused) {
      audio.play();
      currentMusic = audio;
    } else {
      audio.pause();
      currentMusic = null;
    }
  }

  album.addEventListener("click", toggleMusic);
  title.addEventListener("click", toggleMusic);
});
</script>

